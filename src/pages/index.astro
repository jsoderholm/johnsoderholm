---
import Link from "@/components/link.astro"
import siteConfig from "@/config/site.config"
import Layout from "@/layouts/layout.astro"
import { Icon } from "astro-icon/components"
---

<Layout>
  <div class="space-y-2">
    <p>
      Currently working at <Link href="https://julo.se" external
        ><b>Julo</b><Icon name="link" /></Link
      >.
    </p>
    <div class="flex items-center gap-0.5">
      <Link variant="icon" href={siteConfig.mailto} external>
        <Icon name="email" />
      </Link>
      <Link variant="icon" href={siteConfig.github} external>
        <Icon name="github" />
      </Link>
      <Link variant="icon" href={siteConfig.linkedin} external>
        <Icon name="linkedin" />
      </Link>
    </div>
  </div>
</Layout>
